
{% extends 'admin/base.html.twig' %}

{% block custom_page_title %}Seznam apartmanů{% endblock %}
{% block custom_page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary table-box">
                <div class="box-body">
                    <table class="table table-bordered table-hover" data-controller="data-table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Budova</th>
                            <th>Název</th>
                            <th>Vlastník</th>
                            <th>Velikost</th>
                            <th>Stav studené vody</th>
                            <th>Stav teplé vody</th>
                            <th>Stav plynoměru</th>
                            <th>Stav elektroměru</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for apartment in apartments %}
                            <tr>
                                <td>
                                    {{ apartment.id }}
                                </td>
                                <td>
                                    {{ apartment.building }}
                                </td>
                                <td>
                                    {{ apartment.title }}
                                </td>
                                <td>
                                    {{ apartment.person }}
                                </td>
                                <td>
                                    {{ apartment.size }} m2
                                </td>
                                <td>
                                    {{ apartment.coldWaterStatus }} m3
                                </td>
                                <td>
                                    {{ apartment.hotWaterStatus }} m3
                                </td>
                                <td>
                                    {{ apartment.gasMeterStatus }} m3
                                </td>
                                <td>
                                    {{ apartment.squareStatus }} m3
                                </td>
                                <td>
                                    <a href="{{ path('app_apartment_edit',{'id':apartment.id}) }}"
                                       class="btn btn-primary btn-sm">Upravit</a>
                                </td>
                                <td>
                                    <a href="{{ path('app_apartment_delete',{'id':apartment.id}) }}"
                                       class="btn btn-danger btn-sm">Vymazat</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}